{# show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails de l'Utilisateur{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-user me-2"></i>Détails de l'Utilisateur</h4>
                <div>
                    <a href="{{ path('app_user_index') }}" class="btn btn-light btn-sm me-2">
                        <i class="fas fa-list me-1"></i>Liste
                    </a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm me-2">
                        <i class="fas fa-edit me-1"></i>Éditer
                    </a>
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row" style="width: 30%;">ID</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Rôles</th>
                            <td>
                                {% if user.roles is not empty %}
                                    <ul class="list-unstyled mb-0">
                                        {% for role in user.roles %}
                                            <li><span class="badge bg-secondary">{{ role }}</span></li>
                                        {% endfor %}
                                    </ul>
                                {% else %}
                                    <span class="text-muted">Aucun rôle</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Mot de Passe</th>
                            <td>{{ user.password }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
