{# edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier la Tâche{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Modifier la Tâche</h4>
                <a href="{{ path('app_task_index') }}" class="btn btn-light btn-sm">
                    <i class="fas fa-list me-1"></i>Liste des Tâches
                </a>
            </div>
            <div class="card-body">
                {{ include('task/_form.html.twig', {'button_label': 'Mettre à Jour'}) }}
            </div>
            <div class="card-footer">
                {{ include('task/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
