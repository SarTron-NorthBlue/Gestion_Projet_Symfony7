{# show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails de la Tâche{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-tasks me-2"></i>Détails de la Tâche</h4>
                <div>
                    <a href="{{ path('app_task_index') }}" class="btn btn-light btn-sm me-2">
                        <i class="fas fa-list me-1"></i>Liste des Tâches
                    </a>
                    <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning btn-sm me-2">
                        <i class="fas fa-edit me-1"></i>Éditer
                    </a>
                    {{ include('task/_delete_form.html.twig') }}
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row" style="width: 30%;">ID</th>
                            <td>{{ task.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Titre</th>
                            <td>{{ task.title }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Description</th>
                            <td>{{ task.description }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Statut</th>
                            <td>{{ task.status.value }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Créé le</th>
                            <td>{{ task.createAt ? task.createAt|date('d/m/Y H:i') : 'N/A' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date d'Échéance</th>
                            <td>{{ task.dueDate ? task.dueDate|date('d/m/Y') : 'N/A' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
